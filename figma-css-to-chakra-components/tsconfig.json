{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist/",
    "lib": [
      "ES2021.String"
    ]
  },
  "include": [
    "**/*",
    "**/**/*"
  ]
}
